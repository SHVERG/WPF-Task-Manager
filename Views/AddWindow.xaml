<Window x:Class="WpfTaskManager.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfTaskManager"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        mc:Ignorable="d"
        Title="Add"
        Height="400"
        Width="400"
        x:Name="addWindow"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="{x:Null}"
        WindowStyle="None"
        ShowInTaskbar="False">

    <Window.DataContext>
        <local:AddVM/>
    </Window.DataContext>

    <Grid>
        <Border CornerRadius="5" 
                Background="{StaticResource MaterialDesignBackground}">

            <StackPanel>
                <Label Content="NAME" 
                       HorizontalAlignment="Center" 
                       Foreground="{StaticResource PrimaryHueMidBrush}" 
                       FontWeight="Bold"
                       FontSize="14"/>

                <TextBox Background="WhiteSmoke" 
                         FontWeight="SemiBold"
                         FontSize="12"
                         Margin="10, 0"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Content="DESCRIPTION" 
                       HorizontalAlignment="Center" 
                       Foreground="{StaticResource PrimaryHueMidBrush}" 
                       FontWeight="Bold"
                       FontSize="14"/>

                <ScrollViewer Margin="10, 0"
                              Height="235">

                    <TextBox VerticalContentAlignment="Top" 
                             Background="WhiteSmoke" 
                             FontWeight="SemiBold"
                             FontSize="12"
                             AcceptsReturn="True"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                </ScrollViewer>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="3">

                    <Label Content="DEADLINE" 
                           Foreground="{StaticResource PrimaryHueMidBrush}" 
                           FontWeight="Bold"
                           FontSize="14"/>

                    <DatePicker FontWeight="SemiBold"
                                FontSize="12"
                                FirstDayOfWeek="Monday"
                                SelectedDate="{Binding Deadline}"
                                DisplayDateStart="{Binding StartDate}"
                                DisplayDateEnd="{Binding EndDate}">
                    </DatePicker>

                    <materialDesign:TimePicker Grid.Column="1"
                                               FontWeight="SemiBold"
                                               FontSize="12"
                                               Is24Hours="True"
                                               SelectedTime="{Binding Time}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" 
                            VerticalAlignment="Center" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="14">

                    <Button Content="CLOSE" 
                            Margin="20, 0" 
                            Width="150"
                            Command="{Binding CloseCommand}"
                            CommandParameter="{Binding ElementName=addWindow}"/>

                    <Button Content="ADD" 
                            Margin="20, 0" 
                            Width="150"
                            Command="{Binding AddCommand}"
                            CommandParameter="{Binding ElementName=addWindow}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
